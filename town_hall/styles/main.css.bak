/* the styles for the elements */
body {
	font-family: Arial, Helvetica, sans-serif;
    font-size: 100%;
	width: 800px;
	margin: 0 auto;
	border-width: 3px;
	border-style: solid;
	border-color: #931420;
	background-color: #fffded;
}

ul#nav_menu {
	list-style-type: none;
	margin: 0;
	padding: 0;
	position: relative;
}

ul#nav_menu li {
	float: left;
}

ul#nav_menu li a {
	width: 160px;
	text-align: center;
	padding: 0;
	background-color: #800000;	
	color: white;
	text-decoration: none;
	display: block;
}

ul#nav_menu li a.current {
	color: yellow;
}

ul#nav_menu ul {
    display: none;
    position: absolute;
    top: 100%;
	list-style-type: none;
}

ul#nav_menu ul li {
	float: left;
}
ul#nav_menu li:hover ul {
	display: block;
}

ul#nav_menu::after {
    content: "";
    clear: both;
    display: block;
}

section {
	width: 525px;
	float: right;
	padding: 20px 20px 20px 0px;
}

aside {
	width: 215px;
	float: left;
	padding-left: 20px;
	padding-bottom: 20px;
}

html{
	background-color: white;
}

/* the styles for the header */
header {
	border-bottom-width: 3px;
	border-style: none none solid none;
	border-color: #931420;
	padding-top: 1.5em;
	padding-bottom: 2em;
	background-image: linear-gradient(30deg, #f6bb73, #f6bb73, white, #f6bb73, #f6bb73);
}

header img {
	float: left;
	padding: 0px 30px;
}

h2 {
	font-size: 170%;
}

h3 {
	font-size: 130%;
}

/* the styles for the section */
main {
	clear: left;
}

.shadow {
	text-shadow: 1px 1px #800000;
}

section h1{
	font-size: 150%;
	padding-top: 0.5em;
	padding-bottom: 0.25em;
	margin: 0;
}

section h2 {
	font-size: 130%;
	color: #800000;
	padding: 0.5em 0em 0.25em 0em;
}

article {
	padding-top: 0.5em;
	padding-bottom: 0.5em;
	border-top: 2px;
	border-bottom: 2px;
	border-color: #800000;
	border-style: solid none;
}

article img {
	float: right;
	margin: 10px 10px 80px 10px;
	border: 1px black solid;
}

article h2 {
	padding: 0px;
}

article h3{
	font-size: 105%;
	padding-bottom: 0.25em;
}

aside h2 {
	font-size: 130%;
	color: #800000;
	padding: 0.5em 0em 0.25em 0em;
}

aside h3 {
	font-size: 105%;
	padding-bottom: 0.25em;
}

aside img {
	padding-bottom: 1em;
}

p {
	padding-bottom: 0.5em;
}

blockquote {
	padding: 0em 2em;
	font-style: italic;
}

ul {
	padding: 0em 0em 0.25em 1.25em;
}

li {
	padding-bottom: 0.35em;
}

a:hover {
	font-style: italic;
}

a:focus {
	font-style: italic;
}

/* the styles for the footer */

footer {
	background-color: #931420;
	clear: right;
}

footer p{
	color: white;
	text-align: center;
	padding: 1em 0em;
}